#		echo lol
#		;;
#
#		save-off)
#		echo lol
#		;;
#}

notify()
{
	case "$1" in
		mc)
		screen -x $SERVERSCREEN -X stuff "`printf "say $2\r"`"
		;;

		log)
		echo "[$HMS] $2">>fame.log
		;;

		console)
		#echo lol
		;;

		*)
		notify mc "$1"
		notify log "$1"
		notify console "$1"
		;;
#	screen -x $SCREENNAME -X stuff "`printf "say Startar oppbakking av verda\r"`"
	esac
}


exporting()
{
	echo lol
}


upload()
{
	echo lol
}


archive()
{
	echo lol
}


cleanup()
{
	echo lol
}


#actual runscript

clear
gfx splash # Display splash screen with logo
gfx header
fameprocess
echo -e ""$LIGHTCYAN"SERVER DESCRIPTION          SCREEN                 CURRENT STATUS              I"
#Server Description          Screen                 Current status              I
#CSDN World T                mc-worldt              Informing users        
echo
echo -e ""$GRAY"$SERVERDESC                $SERVERSCREEN              Testing messaging service"
echo
timeupdate
echo "Backupstamp: $BKSTAMP"
notify "Fametest @ $NOWSTAMP"
